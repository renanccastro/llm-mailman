# Server Configuration
PORT=4000
NODE_ENV=development

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/ai_dev_assistant"

# Redis
REDIS_URL="redis://localhost:6379"

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=7d

# Push Notifications (Generate with: npx web-push generate-vapid-keys)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# AI Services (Optional - uses Claude Code CLI by default)
CLAUDE_API_KEY=your-claude-api-key-if-needed
OPENAI_API_KEY=your-openai-api-key-if-needed
DEFAULT_AI_PROVIDER=claude-code

# Email Configuration (Choose one)
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Or SendGrid (alternative to SMTP)
SENDGRID_API_KEY=your-sendgrid-api-key

# WhatsApp Business API (Optional)
WHATSAPP_API_KEY=your-whatsapp-api-key
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token

# Container Configuration
CONTAINER_REGISTRY=your-container-registry
CONTAINER_NAMESPACE=ai-dev-assistant

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100