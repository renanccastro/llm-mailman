# Database
DATABASE_URL=postgresql://aidev:aidev_secret_2025@localhost:5432/aidev_platform
REDIS_URL=redis://:redis_secret_2025@localhost:6379

# Authentication
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret
GITHUB_CALLBACK_URL=http://localhost:4000/auth/github/callback
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_change_in_production

# API Keys (User's own tokens)
# These will be stored per user in the database
# ANTHROPIC_API_KEY=sk-ant-xxxxx (stored per user)

# WhatsApp Business API
WHATSAPP_API_TOKEN=your_whatsapp_business_api_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@aidev.platform
EMAIL_DOMAIN=aidev.platform

# SendGrid (Production)
SENDGRID_API_KEY=your_sendgrid_api_key

# Container Management
DOCKER_HOST=unix:///var/run/docker.sock
CONTAINER_MEMORY_LIMIT=2048m
CONTAINER_CPU_LIMIT=2
CONTAINER_DISK_LIMIT=10g
CONTAINER_TIMEOUT_SECONDS=3600

# Kubernetes (Production)
KUBE_NAMESPACE=aidev-users
KUBE_CONFIG_PATH=/path/to/kubeconfig

# Application
NODE_ENV=development
PORT=4000
WEB_APP_URL=http://localhost:3001
API_URL=http://localhost:4000
WEBSOCKET_URL=ws://localhost:4000

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50
IP_WHITELIST_ENABLED=false
CONFIRMATION_TIMEOUT_SECONDS=300
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Monitoring
SENTRY_DSN=your_sentry_dsn_if_using
LOG_LEVEL=debug

# Feature Flags
ENABLE_WHATSAPP=true
ENABLE_EMAIL=true
ENABLE_VOICE_NOTES=false
YOLO_MODE_DEFAULT=false

# Storage
UPLOAD_DIR=/tmp/uploads
MAX_FILE_SIZE=10485760